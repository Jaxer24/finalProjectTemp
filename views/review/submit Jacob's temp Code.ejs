<%- include('../partials/header') %>

<div class="container">
  <div class="auth-form">
    <h1>Create an Review</h1>
    
    <%- include('../partials/flash-message') %>
    <%- include('../partials/form-errors') %>
      
    <form action="/review/submit" method="POST">
      
      <div class="form-group">
        <label for="title">Title</label>
        <input 
          type="text" 
          id="title" 
          name="title" 
          value="<%= typeof formData !== 'undefined' ? formData.title || '' : '' %>"
        >
      </div>
      
      <div class="form-group">
        <label for="message">Review</label>
        <input 
          type="text" 
          id="message" 
          name="message" 
          value="<%= typeof formData !== 'undefined' ? formData.message || '' : '' %>"
        >
      </div>
        
       
      <div class="form-group">
        <label for="rating">Rating</label>
         <input 
            type="number" 
            id="rating" 
            name="rating" 
            min="1" 
            max="5" 
            value="<%= typeof formData !== 'undefined' ? formData.rating || '' : '' %>">
      </div>
        <div class="form-actions">
            <button type="submit" class="btn primary-btn">Submit</button>
        </div>
    </form>
    

  </div>
</div>

<%- include('../partials/footer') %>